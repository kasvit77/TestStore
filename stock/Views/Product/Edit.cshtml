@model stock.Models.Product
@{
    ViewBag.Title = "Добавить склад";
}
<form asp-action="edit" asp-controller="product">


    <div class="form-group">

        <label>Склад</label>
        <select asp-for="StorageId" asp-items="ViewBag.Storage"></select>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input type="text" asp-for="Name" class="form-control" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label">количество</label>
        <input type="text" asp-for="Quantity" class="form-control" value="@Model.Quantity" />
    </div>
    <div class="form-group">
        <label asp-for="Typequantity" class="control-label">кг,шт,литр</label>
        <input type="text" asp-for="Typequantity" class="form-control" value="@Model.Quantity" />
    </div>
    <div class="form-group">
        <label asp-for="description" class="control-label">Описание</label>
        <input type="text" asp-for="description" class="form-control" value="@Model.description" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>